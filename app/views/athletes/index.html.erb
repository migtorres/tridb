<%- model_class = Athlete -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:ftp_number) %></th>
      <th><%= model_class.human_attribute_name(:ftp_license) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:full_name) %></th>
      <th><%= model_class.human_attribute_name(:birth_date) %></th>
      <th><%= model_class.human_attribute_name(:team_id) %></th>
      <th><%= model_class.human_attribute_name(:location_id) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:facebook) %></th>
      <th><%= model_class.human_attribute_name(:twitter) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:gender) %></th>
      <th><%= model_class.human_attribute_name(:nationality) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @athletes.each do |athlete| %>
      <tr>
        <td><%= link_to athlete.id, athlete_path(athlete) %></td>
        <td><%= athlete.ftp_number %></td>
        <td><%= athlete.ftp_license %></td>
        <td><%= athlete.name %></td>
        <td><%= athlete.full_name %></td>
        <td><%= athlete.birth_date %></td>
        <td><%= athlete.team_id %></td>
        <td><%= athlete.location_id %></td>
        <td><%= athlete.email %></td>
        <td><%= athlete.facebook %></td>
        <td><%= athlete.twitter %></td>
        <td><%= athlete.url %></td>
        <td><%= athlete.gender %></td>
        <td><%= athlete.nationality %></td>
        <td><%=l athlete.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_athlete_path(athlete), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      athlete_path(athlete),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_athlete_path,
            :class => 'btn btn-primary' %>
